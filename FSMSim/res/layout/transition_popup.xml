<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/input_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_btn"
        android:layout_alignLeft="@+id/tv_input"
        android:layout_alignRight="@+id/tv_input"
        android:digits="01."
		android:inputType="numberDecimal"
        android:ems="10">

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_output"
        android:src="@drawable/ic_action_accept" android:contentDescription="TODO"/>

    <TextView
        android:id="@+id/tv_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/add_btn"
        android:text="@string/output"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_btn"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:text="@string/input"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/transationListView" />

    <ListView
        android:id="@+id/transationListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_txt" >

    </ListView>

    <EditText
        android:id="@+id/output_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/transationListView"
        android:layout_alignLeft="@+id/tv_output"
        android:layout_alignRight="@+id/tv_output"
        android:ems="10"
        android:digits="01"
		android:inputType="numberDecimal"/>

</RelativeLayout>
